# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base05 $base0D $base00 $base08 $base0D
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07

bindsym XF86AudioRaiseVolume  exec volume.sh up
bindsym XF86AudioLowerVolume  exec volume.sh down
bindsym XF86AudioMute         exec volume.sh mute
bindsym XF86AudioMicMute      exec mic.sh

bindsym XF86MonBrightnessUp   exec brightness.sh up
bindsym XF86MonBrightnessDown exec brightness.sh down

bindsym Print               exec full-screenshot.sh
bindsym $mod+Print          exec active-window-screenshot.sh
bindsym Shift+Print         exec selection-screenshot.sh
bindsym Control+Print       exec full-screenshot.sh copy
bindsym Control+$mod+Print  exec active-window-screenshot.sh copy
bindsym Control+Shift+Print exec selection-screenshot.sh copy

bindsym $mod+slash      exec start-mpd
bindsym $mod+backslash  exec powermenu.sh
bindsym $mod+apostrophe exec screen-record.sh

bindsym $mod+Tab workspace back_and_forth
bindsym $mod+bracketleft workspace prev
bindsym $mod+bracketright workspace next
bindsym Mod1+Tab focus prev

