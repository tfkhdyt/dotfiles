include ~/.config/newsboat/gruvbox

browser "librewolf %u"
macro m set browser "mpv %u"; open-in-browser ; set browser "librewolf %u"
macro n set browser "mpv --ytdl-format='bestvideo[height<=240]+bestaudio/best[height<=240]/best' %u"; open-in-browser ; set browser "librewolf %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

auto-reload yes
reload-threads 8
feed-sort-order lastupdated
text-width 100
